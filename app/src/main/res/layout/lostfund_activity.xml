<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/lostfund_title"
        android:background="#8866ff00"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="The Safe number"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="xxxx"
            android:layout_marginTop="8dip"
            android:layout_marginRight="5dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="10dip"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="enable the function"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="5dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/unlock"
            android:layout_marginRight="5dip"
            android:layout_marginTop="8dip"
            android:layout_alignParentRight="true"
            android:layout_width="25dip"
            android:layout_height="25dip" />
    </RelativeLayout>

    <View
        android:layout_marginTop="10dip"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dip" />

    <TextView
        android:text="reset the setting of protecting"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="8dip"
        android:layout_marginLeft="5dip"
        android:clickable="true"
        android:onClick="resetEnterSetup"
        android:background="@drawable/shape_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="5dip"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dip" />

    <TextView
        android:text="function preview"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="#44000000"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:clickable="true"
        android:onClick="startLocation"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="GPS追踪：#*location*#"/>

    <TextView
        android:clickable="true"
        android:onClick="startAlarm"
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="播放报警音乐：#*alarm*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程数据销毁：#*wipedata*#" />

    <TextView
        style="@style/text_content_style"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="远程锁屏：#*lockscreen*#" />
</LinearLayout>