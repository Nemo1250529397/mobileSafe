<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luncher_bg">

    <TextView
        android:id="@+id/tv_splash_version"
        android:layout_centerInParent="true"
        android:textSize="12sp"
        android:shadowColor="@android:color/holo_blue_bright"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pb_check"
        android:layout_below="@id/tv_splash_version"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_checkupdate"
        android:layout_below="@id/pb_check"
        android:layout_centerHorizontal="true"
        android:text="@string/checkupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>